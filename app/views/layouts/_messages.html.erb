<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <% flash.each do |name, msg| %>
      <div class='alert alert-<%="#{name}"%>'>  <!-- string interpolation to refer to type of flash msg-->
        <a href="#" class="close" data-dismiss="alert">&#215;</a> <!-- displays the x to close alert notice -->
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      </div>
    <% end %>
    </div>
</div>  <!-- /row -->